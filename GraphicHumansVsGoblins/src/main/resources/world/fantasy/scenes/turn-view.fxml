<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="world.fantasy.controllers.PlayerTurnController">
   <children>
      <fx:include fx:id="map" source="map-view.fxml" />
      <VBox fx:id="details" alignment="TOP_CENTER" spacing="5.0">
         <fx:include fx:id="order" source="turn-order-view.fxml" />
         <fx:include fx:id="info" source="unit-info-view.fxml" />
         <Separator layoutX="127.0" layoutY="292.0" orientation="VERTICAL" visible="false" VBox.vgrow="ALWAYS" />
         <VBox alignment="TOP_CENTER" layoutX="30.0" layoutY="229.0">
            <children>
               <VBox fx:id="equipmentDisplay" alignment="TOP_CENTER" spacing="10.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <children>
                     <Label text="Equipment: 1" />
                     <Label layoutX="101.0" layoutY="20.0" text="Equipment: 2" />
                  </children>
               </VBox>
               <HBox fx:id="gearInput" alignment="CENTER" spacing="20.0">
                  <children>
                     <Button fx:id="btnEquip" mnemonicParsing="false" onAction="#onEquipClick" text="Equip" />
                     <Button fx:id="btnUnequip" layoutX="63.0" layoutY="20.0" mnemonicParsing="false" onAction="#onUnequipClick" text="Unequip" />
                     <Button fx:id="btnAuto" mnemonicParsing="false" onAction="#onAutoClick" text="Auto" />
                  </children>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </HBox>
            </children>
         </VBox>
         <Separator orientation="VERTICAL" visible="false" VBox.vgrow="ALWAYS" />
         <VBox fx:id="unitOptions" spacing="10.0">
            <children>
               <HBox alignment="CENTER" spacing="10.0">
                  <children>
                     <Separator visible="false" />
                     <Button fx:id="btnInventory" mnemonicParsing="false" onAction="#onInventoryClick" prefWidth="75.0" text="Inventory" />
                     <Separator layoutX="52.0" layoutY="21.0" visible="false" />
                     <Button fx:id="btnGear" mnemonicParsing="false" onAction="#onGearClick" prefWidth="75.0" text="Gear" />
                     <Separator layoutX="189.0" layoutY="21.0" visible="false" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
                  <children>
                     <Separator visible="false" />
                     <Button fx:id="btnMove" mnemonicParsing="false" onAction="#onMoveClick" prefWidth="75.0" text="Move" />
                     <Separator visible="false" />
                     <Button fx:id="btnPass" layoutX="97.0" layoutY="20.0" mnemonicParsing="false" onAction="#onPassClick" prefWidth="75.0" text="Pass" />
                     <Separator visible="false" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
         <Separator layoutX="147.0" layoutY="390.0" orientation="VERTICAL" visible="false" />
         <fx:include fx:id="inv" source="inventory-view.fxml" />
         <fx:include fx:id="move" source="move-input-view.fxml" />
         <Separator layoutX="142.0" layoutY="403.0" orientation="VERTICAL" visible="false" VBox.vgrow="ALWAYS" />
      </VBox>
   </children>
</HBox>
