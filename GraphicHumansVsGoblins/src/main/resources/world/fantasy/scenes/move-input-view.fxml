<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="moveInput" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="world.fantasy.controllers.MoveInputController">
   <children>
      <Button fx:id="btnNorth" mnemonicParsing="false" onAction="#onNorthClick" prefWidth="75.0" text="North" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="btnWest" mnemonicParsing="false" onAction="#onWestClick" prefWidth="75.0" text="West" />
            <Button fx:id="btnEast" layoutX="63.0" layoutY="20.0" mnemonicParsing="false" onAction="#onEastClick" prefWidth="75.0" text="East" />
         </children>
      </HBox>
      <Button fx:id="btnSouth" mnemonicParsing="false" onAction="#onSouthClick" prefWidth="75.0" text="South" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
