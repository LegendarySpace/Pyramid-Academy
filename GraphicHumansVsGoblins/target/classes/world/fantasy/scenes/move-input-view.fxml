<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="moveInput" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="world.fantasy.controllers.MoveInputController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="btnNorthWest" mnemonicParsing="false" onAction="#onNorthWestClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
            <Button fx:id="btnNorth" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onNorthClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
            <Button fx:id="btnNorthEast" layoutX="63.0" layoutY="20.0" mnemonicParsing="false" onAction="#onNorthEastClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="btnWest" mnemonicParsing="false" onAction="#onWestClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
            <Separator HBox.hgrow="ALWAYS" />
            <Button fx:id="btnEast" layoutX="63.0" layoutY="20.0" mnemonicParsing="false" onAction="#onEastClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="btnSouthWest" mnemonicParsing="false" onAction="#onSouthWestClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
            <Button fx:id="btnSouth" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onSouthClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
            <Button fx:id="btnSouthEast" layoutX="63.0" layoutY="20.0" mnemonicParsing="false" onAction="#onSouthEastClick" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: #42E6F55A;" />
         </children>
      </HBox>
   </children>
</VBox>
